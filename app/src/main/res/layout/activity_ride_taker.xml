<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="@color/green2"
    tools:context=".rideTaker">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="274dp"
        android:layout_height="40dp"
        android:layout_marginStart="69dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="36dp"
        android:text="@string/otp1"
        android:textAlignment="center"
        android:textColor="@color/grey2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="816dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="299dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:text="@string/create_your_ride"
                    android:textColor="@color/green3"
                    android:textSize="30dp" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="end|top"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    app:srcCompat="@drawable/_aa2017a67ca44408d879d36e7558629__2__removebg_preview__1_" />
            </LinearLayout>


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="339dp"
                android:layout_height="170dp"
                android:layout_gravity="center_horizontal|center_vertical"
                app:srcCompat="@drawable/ridetaker" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="399dp"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Departure point"
                android:textColor="@color/green3"
                android:textSize="23dp" />

            <EditText
                android:id="@+id/depart"
                android:layout_width="353dp"
                android:layout_height="47dp"
                android:layout_margin="15dp"
                android:backgroundTint="@color/green3"
                android:hint="Enter Your Departure Location"
                android:paddingHorizontal="30dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Arrival point"
                android:textColor="@color/green3"
                android:textSize="23dp" />

            <EditText
                android:id="@+id/arrive"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_margin="15dp"
                android:backgroundTint="@color/green3"
                android:hint="Enter Your Arrival Location"
                android:paddingHorizontal="20dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Date"
                android:textColor="@color/green3"
                android:textSize="23dp" />

            <RelativeLayout
                android:id="@+id/activity_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="tabian.com.datepickerdialog.MainActivity">

                <TextView
                    android:id="@+id/tvTimer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:hint="Select Date"
                    android:textSize="20dp"
                    android:drawableTop="@drawable/logo_vert"/>

                <TextView
                    android:id="@+id/tvTimer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/logo_vert"
                    android:hint="Select Date"
                    android:textSize="20dp" />

            </RelativeLayout>
            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editTextTime2"
                    android:layout_width="20dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:ems="10"
                    android:inputType="time" />

            </LinearLayout> -->

        </LinearLayout>

        <Button
            android:id="@+id/continueB"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginStart="57dp"
            android:layout_marginEnd="57dp"
            android:layout_marginBottom="140dp"
            android:backgroundTint="@color/green3"
            android:paddingHorizontal="120dp"
            android:text="continue" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>