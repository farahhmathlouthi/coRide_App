<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CoRideApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="RoundedCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">10dp</item> <!-- Adjust the corner radius as needed -->
        <item name="cardElevation">4dp</item> <!-- Optional: Add elevation to give it a shadow effect -->
    </style>

    <style name="Theme.CoRideApp" parent="Base.Theme.CoRideApp" />
    <style name="SlideActivityAnimation" parent="android:style/Animation.Activity">
       <item name="android:activityOpenEnterAnimation">
           @animator/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">
            @animator/slide_to_left</item>
    </style>
</resources>
