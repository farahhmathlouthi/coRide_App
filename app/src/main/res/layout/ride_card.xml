<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        style="@style/RoundedCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gr"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/NameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FullName: "
                    android:textSize="20dp"
                    android:fontFamily="@font/montserrat_bold"/>

                <TextView
                    android:id="@+id/PhoneTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone: "
                    android:textSize="20dp"
                    android:fontFamily="@font/montserrat_bold"/>

                <TextView
                    android:id="@+id/arrivalTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Arrival: "
                    android:textSize="20dp"
                    android:fontFamily="@font/montserrat_bold" />

                <TextView
                    android:id="@+id/departureTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Departure: "
                    android:textSize="20dp"
                    android:fontFamily="@font/montserrat_bold"/>


                <TextView
                    android:id="@+id/DateTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date: "
                    android:textSize="20dp"
                    android:fontFamily="@font/montserrat_bold"/>

                <TextView
                    android:id="@+id/timeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time: "
                    android:textSize="20dp"
                    android:fontFamily="@font/montserrat_bold"/>


                <TextView
                    android:id="@+id/placeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Places: "
                    android:textSize="20dp"
                    android:fontFamily="@font/montserrat_bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/NameTextView1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="20dp"
                    android:fontFamily="@font/montserrat_bold"/>

                <TextView
                    android:id="@+id/PhoneTextView1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="20dp"
                    android:fontFamily="@font/montserrat_bold"/>


                <TextView
                    android:id="@+id/arrivalTextView1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="20dp"
                    android:fontFamily="@font/montserrat_bold" />

                <TextView
                    android:id="@+id/departureTextView1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="20dp"
                    android:fontFamily="@font/montserrat_bold"/>


                <TextView
                    android:id="@+id/DateTextView1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="20dp"
                    android:fontFamily="@font/montserrat_bold"/>

                <TextView
                    android:id="@+id/timeTextView1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"
                    android:fontFamily="@font/montserrat_bold"/>


                <TextView
                    android:id="@+id/placeTextView1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="20dp"
                    android:fontFamily="@font/montserrat_bold"/>


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>