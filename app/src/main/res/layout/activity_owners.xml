<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".Owners">

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/montserrat_light"
        android:text="Owners"
        android:textColor="@color/blue2"
        android:textSize="60sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="80dp" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="136dp"
        android:layout_height="324dp"
        android:layout_marginStart="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/asma1"
        tools:layout_editor_absoluteY="138dp" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="177dp"
        android:layout_height="339dp"
        app:srcCompat="@drawable/farah2"
        tools:layout_editor_absoluteX="204dp"
        tools:layout_editor_absoluteY="137dp" />

    <TextView
        android:id="@+id/farah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="AsmaBenHamouda"
        android:textColor="@color/green3"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="476dp" />

    <TextView
        android:id="@+id/farah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="FarahMathlouthi"
        android:textColor="@color/green3"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="476dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="384dp"
        android:layout_height="132dp"
        android:text=" Meet Asma (20) and Farah (20), Isamm students from Tunisia with a passion for tech and a greener future. Frustrated by air pollution, they built CoRide to make carpooling easier. Farah's clever algorithms match users perfectly, while Asma's design keeps things user-friendly. "
        android:textAlignment="center"
        android:textColor="@color/green3"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="565dp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CoRide: Created by Data Science Students! "
        android:textColor="@color/green3"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="520dp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="397dp"
        android:layout_height="52dp"
        android:text="Join the movement - download CoRide today!"
        android:textAlignment="center"
        android:textColor="@color/green3"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="712dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
