<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="@color/white"
    tools:context=".MainActivity2">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="90dp"
        android:textColor="@color/green3"
        android:fontFamily="@font/montserrat_bold"
        android:text="  Sign In Now"
        android:drawableLeft="@drawable/tunisie"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="512dp"
        android:layout_height="352dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.297"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/signin" />


    <LinearLayout
        android:id="@+id/passwordTextInputLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="461dp">

        <EditText
            android:id="@+id/inputE"
            android:layout_width="338dp"
            android:layout_height="53dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_bg"
            android:backgroundTint="@color/gr"
            android:drawableLeft="@drawable/password_24"
            android:ems="10"
            android:hint="Enter Your Email"
            android:inputType="textEmailAddress"
            android:padding="15dp" />

        <EditText
            android:id="@+id/inputpassword"
            android:layout_width="338dp"
            android:layout_height="53dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_bg"
            android:backgroundTint="@color/gr"
            android:drawableLeft="@drawable/password_24"
            android:ems="10"
            android:hint="Enter Your Password"
            android:inputType="textPassword"
            android:padding="15dp" />

        <TextView
            android:id="@+id/forgotten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:fontFamily="@font/montserrat_light"
            android:text="Forget Password?"
            android:textColor="@color/green3"
            android:textSize="16dp"
            android:clickable="true" />
    </LinearLayout>

    <Button
        android:id="@+id/singInButton"
        android:layout_width="338dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/green3"
        android:paddingHorizontal="120dp"
        android:text="Sign In"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordTextInputLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>